<view class="post-box">
  <view class="title">
    <input placeholder="标题" maxlength="20" bindinput="getTitle" />
  </view>
  <view class="content">
    <textarea placeholder="请输入内容" placeholder-class="textarea" auto-height="true" bindinput="getInput" />
  </view>
</view>

<!-- 添加照片开始 -->
<view class="add-images-box">
  <view class="add-images">
    <view class="img-box add" bindtap="upload_picture">
      <image src="http://47.98.240.189/images/add-images.png"></image>
    </view>
    <view class="img-box">
      <image src="{{pic_src}}"></image>
    </view>
    <view class="img-box">
      <image src=" {{avatarUrl[1]}}"></image>
    </view>
    <view class="img-box">
      <image src=" {{avatarUrl[2]}}"></image>
    </view>
    <view class="img-box">
      <image src=" {{avatarUrl[3]}}"></image>
    </view>
    <view class="img-box">
      <image src=" {{avatarUrl[4]}}"></image>
    </view>
    <view class="img-box">
      <image src=" {{avatarUrl[5]}}"></image>
    </view>
    <view class="img-box">
      <image src=" {{avatarUrl[6]}}"></image>
    </view>
    <view class="img-box">
      <image src=" {{avatarUrl[7]}}"></image>
    </view>
    <view class="img-box">
      <image src=" {{avatarUrl[8]}}"></image>
    </view>
  </view>

</view>
<!-- 添加照片结束 -->

<view class="submit">
  <text bindtap="save">发布</text>
</view>