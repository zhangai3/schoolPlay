/* 新闻列表开始 */

page {
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.list {
  width: 100%;
  height: auto;
  background-color: #fff;
  padding: 20rpx 40rpx 0;
  box-sizing: border-box;
  border-bottom: 4px solid #f5f5f5;
}

.mine {
  height: 90rpx;
  width: 100%;
  /* border: 1px solid red; */
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  margin-right: 15rpx;
}

.avatar image {
  width: 88rpx;
  height: 88rpx;
}

.nt {
  /* background-color: pink; */
  display: inline-block;
  vertical-align: top;
}

.name {
  font-size: 35rpx;
}

.time {
  color: #c6c6c6;
  font-size: 24rpx;
}

.main {
  /* border-bottom: 1px solid #efefef; */
  font-size: 30rpx;
  margin: 30rpx 0;
  box-sizing: border-box;
}
.summary{
  margin-bottom: 30rpx;
}
.main image{
  width: 400rpx;
  /* height: auto; */
  border-radius: 20rpx;
  margin-right: 10rpx;
}

.bottom {
  height: 60rpx;
  position: relative;
}

.icon {
  display: inline-block;
  position: absolute;
  line-height: 60rpx;
  right: 50rpx;
}

.icon text {
  font-size: 24rpx;
  position: absolute;
  top: 3rpx;
  margin-left:10rpx; 
}

/* 发布帖子 */

.post-box {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  /* border: 1px solid red; */
  overflow: hidden;
  position: fixed;
  right: 20rpx;
  bottom: 50rpx;
  background-color: #bbe4f9;
  display: flex;
  justify-content: center;
  align-items: center;
}

.post {
  height: 50rpx;
  width: 50rpx;
}

/* 发布帖子结束 */
