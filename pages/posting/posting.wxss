/* pages/posting/posting.wxss */

page {
  background-color: #fff;
  /* padding: 0rpx 20rpx; */
  box-sizing: border-box;
  /* height: 100%; */
}

.list {
  width: 100%;
  height: auto;
  background-color: #fff;
  padding: 20rpx 40rpx 0;
  box-sizing: border-box;
  position: relative;
}

.mine {
  height: 90rpx;
  width: 100%;
  /* border: 1px solid red; */
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
}

.avatar image {
  width: 88rpx;
  height: 88rpx;
}

.nt {
  /* background-color: pink; */
  display: inline-block;
  vertical-align: top;
  margin-left: 20rpx;
}

.name {
  font-size: 40rpx;
}

.time {
  color: #c6c6c6;
  font-size: 24rpx;
}

.main {
  /* border-bottom: 1px solid #efefef; */
  font-size: 26rpx;
  margin: 10rpx 0;
  box-sizing: border-box;
}

.main image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}

.comment-container {
  padding: 20rpx 40rpx 0;
  /* border-bottom: 2px solid #FBFBFB; */
}

.comment-list {
  border-bottom: 1px solid #fbfbfb;
  margin-top: 30rpx;
}

.comment-mine {
  /* height: 80rpx; */
  width: 100%;
  /* border: 1px solid red; */
}

.comment-avatar {
  height: 78rpx;
  width: 78rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
}

.comment-avatar image {
  height: 78rpx;
  width: 78rpx;
}

.comment {
  margin-top: 10rpx;
  font-size: 32rpx;
}

.bottom {
  height: 100rpx;
  bottom: 0;
  width: 100%;
  position: fixed;
  border-top: 1px solid #efefef;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.icon {
  display: inline-block;
  /* position: absolute; */
  margin-top: 20rpx;
  float: right;
}
.icon .iconfont{
  position: relative;
  top:0.1rem;
}
.icon text {
  font-size: 24rpx;
  /* position: absolute; */
  top: 3rpx;
  margin-left: 10rpx;
  vertical-align: top;
}

.input {
  /* border: 1px solid red; */
  width: 70%;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background-color: #ecedef;
  display: inline-block;
}
